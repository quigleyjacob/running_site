<% include ../partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit Comment</div>
    <form class="ui form" action="/workout/<%= workout_id%>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Name</label>
            <input type="text" name="comment[author]" value="<%= comment.author %>">
        </div>
        
        <div class="field">
            <label>Comment</label>
            <input type="text" name="comment[text]" value="<%= comment.text %>">
        </div>
        
        <input class="ui green big basic button right" type="submit">
    </form>
</div>

<% include ../partials/footer %>